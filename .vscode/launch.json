  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch DB Service",
      "program": "${workspaceFolder}/2. service-db/src/main/app.js",
    },

    {
      "type": "node",
      "request": "launch",
      "name": "Launch Receiver",
      "program": "${workspaceFolder}/service-service/receiver/src/main/app.js",
      "env": {
        "RECEIVER_PORT": "8081",
        "RECEIVER_NAME": "Receiver"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Sender",
      "program": "${workspaceFolder}/service-service/sender/src/main/app.js",
      "env": {
        "SENDER_PORT": "8080",
        "SENDER_NAME": "Sender"
      }
    },
  ]
}